<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Submit Feedback</title>
    <!-- Bootstrap and Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      body {
        background-color: rgb(255, 255, 255); /* Set background color to orange */
      }
      .form-control {
        max-width: 500px; /* Limit the width of input fields */
        width: 100%; /* Make the inputs responsive */
      }
        .btn-primary {
          background-color: orange !important; /* Override the default primary button color */
          color: white !important; /* Ensure text is visible */
          border-color: orange  !important;
        }
  .btn-primary:hover {
    background-color: darkorange !important; /* Change color on hover */
  }
    </style>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <div class="container mt-5">
      <h3 class="text-center">Submit Your Feedback</h3>
      
      <form action="/feedback" method="post" class="mt-4">
          <!-- Name field on a new line -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required />
        </div>
   
        <!-- Occupation message field -->
        <div class="mb-3">
          <label for="occupatione" class="form-label">Occupatio</label>
          <input type="text" class="form-control" id="occupation" name="occupation" required />
        </div>
        
        <!-- Feedback message field -->
        <div class="mb-3">
          <label for="message" class="form-label">Feedback</label>
          <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
        </div>
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary w-20 w-md-auto">Submit</button>
      </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
