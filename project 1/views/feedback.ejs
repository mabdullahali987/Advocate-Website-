<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saeed Khan Akhunzada Portfolio</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome and Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <!-- Feedback Page -->
    <section class="testimonial mt-5 pt-5" id="testimonial">
      <div class="container">
        <div class="row justify-content-center align-items-center">
          <!-- Image Section -->
          <div class="col-md-5 col-10 mb-4" data-aos="slide-right">
            <img src="images/tastimonials-img.png" class="img-fluid rounded" alt="Testimonials Image" />
          </div>

          <!-- Feedback Content -->
          <div class="col-md-7 col-10" data-aos="slide-left">
            <div class="heading text-center text-md-start">
              <h3>Clients Feedback</h3>
            </div>

            <!-- Carousel for Testimonials -->
            <div id="carouselExampleControls" class="carousel slide mt-4" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% feedbackList.forEach((feedback, index) => { %>
                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <div class="row">
                      <div class="col-2 text-center">
                        <i class="bi bi-quote display-3 text-secondary"></i>
                      </div>
                      <div class="col-10">
                        <h5 class="fw-bold">Name: <%= feedback.name %></h5>
                        <p class="mb-1">Occupation: <%= feedback.occupation %></p>
                        <p>Feedback: <%= feedback.message %></p>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>

              <!-- Carousel Controls -->
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <i class="bi bi-arrow-left-circle-fill fs-3"></i>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <i class="bi bi-arrow-right-circle-fill fs-3"></i>
              </button>
            </div>
            <!-- Feedback Submission Button -->
            <div class="text-center text-md-start mt-4">
              <a href="/submit-feedback" class="btn btn-sec px-4 py-2">Submit Feedback</a>
            </div>
            

           
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap and AOS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 1000, offset: 50 });
    </script>

    <!-- Custom JS -->
    <script src="/js/script.js"></script>
  </body>
</html>
