<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saeed Khan Akhunzada Portfolio</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome and Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/servicesstyle.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <!-- Services Form Section -->
    <form action="/services" method="post">
      <!-- Services Section -->
      <section class="expertise mt-5" id="service">
        <div class="container">
          <div class="heading text-center">
            <small>My Expertise</small>
            <h3>Providing a Wide Range of Legal/Law Services</h3>
          </div>
          <div class="row justify-content-center mt-5">
            <!-- Service Card 1 -->
            <div class="col-10 col-md-6 col-lg-4 mb-4" data-aos="fade-up">
              <div class="service-card text-center p-3">
                <div class="img">
                  <img src="images/service-icon1.png" class="w-50 img-fluid" alt="Legal Consultation Icon" />
                </div>
                <div class="content mt-3">
                  <h4>Legal Consultation</h4>
                  <p class="text-muted">
                    Offer legal consultation in specific fields (e.g., criminal law, civil law, constitutional law).
                  </p>
                  <a href="#" class="link">Read More</a>
                </div>
              </div>
            </div>
            <!-- Service Card 2 -->
            <div class="col-10 col-md-6 col-lg-4 mb-4" data-aos="fade-up">
              <div class="service-card text-center p-3">
                <div class="img">
                  <img src="images/service-icon2.png" class="w-50 img-fluid" alt="Litigation Services Icon" />
                </div>
                <div class="content mt-3">
                  <h4>Litigation Services</h4>
                  <p class="text-muted">
                    Representing clients in the Supreme Court and High Court.
                  </p>
                  <a href="#" class="link">Read More</a>
                </div>
              </div>
            </div>
            <!-- Service Card 3 -->
            <div class="col-10 col-md-6 col-lg-4 mb-4" data-aos="fade-up">
              <div class="service-card text-center p-3">
                <div class="img">
                  <img src="images/service-icon3.png" class="w-50 img-fluid" alt="Family Law Services Icon" />
                </div>
                <div class="content mt-3">
                  <h4>Family Law Services</h4>
                  <p class="text-muted">
                    Offering assistance with divorce, child custody, property settlements, etc.
                  </p>
                  <a href="#" class="link">Read More</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </form>

    <!-- Bootstrap and AOS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 1000, offset: 50 });
    </script>

    <!-- Custom JS -->
    <script src="/js/script.js"></script>
  </body>
</html>
