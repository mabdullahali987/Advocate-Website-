<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saeed Khan Akhunzada Portfolio</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome and Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <!-- Contact Form Section -->
    <form action="/about" method="post">
      <section class="contact py-5" id="contact">
        <div class="container">
          <div class="heading text-center">
            <small>Get in Touch</small>
            <h3>Any Questions? Feel Free to Contact</h3>
          </div>
          <div class="row justify-content-center align-items-start mt-5">
            <!-- Contact Details -->
            <div class="col-md-5 col-12 contact-details mb-4 mb-md-0" data-aos="slide-right">
              <p class="mb-3"><i class="bi bi-geo-alt-fill me-2"></i> Islamabad, Pakistan</p>
              <p class="mb-3"><i class="bi bi-telephone-fill me-2"></i> +92 03008597974</p>
              <p class="mb-3"><i class="bi bi-send-fill me-2"></i> abc@gmail.com</p>
              <p class="mb-3"><i class="bi bi-globe-americas me-2"></i> saeedkhanadvocate.com</p>
            </div>

            <!-- Contact Form -->
            <div class="col-md-5 col-12" data-aos="slide-left">
              <div class="contact-form">
                <input type="text" class="form-control mb-3" placeholder="Name" name="name" required />
                <input type="email" class="form-control mb-3" placeholder="E-mail" name="email" required />
                <input type="text" class="form-control mb-3" placeholder="Mobile No." name="mobile" />
                <textarea class="form-control mb-3" placeholder="Message" name="message" rows="5" required></textarea>
                <button type="submit" class="c-btn h-btn mt-3 py-3 px-5 rounded-pill">Submit</button>
              </div>
            </div>
          </div>
        </div>
      </section>
    </form>    

    <!-- Back to Top Button -->
    <button type="button" class="btn btn-floating btn-lg rounded-pill btn-primary position-fixed bottom-3 end-3 shadow" id="btn-back-to-top">
      <i class="bi bi-arrow-up"></i>
    </button>
    
    <!-- Footer Include -->
    <%- include("partials/footer.ejs") %>

    <!-- Bootstrap and AOS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({ duration: 1000, offset: 50 });
    </script>
    
    <!-- Custom JS -->
    <script src="/js/script.js"></script>
  </body>
</html>
